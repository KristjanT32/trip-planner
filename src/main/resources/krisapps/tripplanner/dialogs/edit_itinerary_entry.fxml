<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="400.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Edit itinerary entry details">
         <font>
            <Font name="Segoe UI Bold" size="20.0" />
         </font>
      </Label>
      <VBox spacing="10.0">
         <children>
            <VBox maxWidth="1.7976931348623157E308">
               <children>
                  <Label text="Entry description">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                     <font>
                        <Font name="Segoe UI" size="12.0" />
                     </font>
                  </Label>
                  <TextField fx:id="descriptionBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="Activity description">
                     <font>
                        <Font name="Segoe UI Light" size="20.0" />
                     </font>
                  </TextField>
               </children>
            </VBox>
            <VBox maxWidth="1.7976931348623157E308">
               <children>
                  <Label text="Assigned day">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                     <font>
                        <Font name="Segoe UI" size="12.0" />
                     </font>
                  </Label>
                  <Spinner fx:id="dayBox" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="day-picker" />
               </children>
            </VBox>
            <VBox maxWidth="1.7976931348623157E308">
               <children>
                  <HBox>
                     <children>
                        <Label maxWidth="1.7976931348623157E308" text="Activity starts at" HBox.hgrow="ALWAYS" />
                        <Label alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" text="Activity ends at" HBox.hgrow="ALWAYS" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox>
                     <children>
                        <TextField fx:id="startField" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="00:00" HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="Segoe UI Light" size="20.0" />
                           </font>
                        </TextField>
                        <Label alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="-">
                           <HBox.margin>
                              <Insets left="5.0" right="5.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Segoe UI Bold" size="20.0" />
                           </font>
                        </Label>
                        <TextField fx:id="endField" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="00:00" HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="Segoe UI Light" size="20.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
